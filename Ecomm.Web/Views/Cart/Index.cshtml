@model Ecomm.Commerce.Data.ShoppingCart

@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Cart</h2>
<div class="row">
    <div class="col-md-12" id="CartContentsContainer">
        @if (Model == null)
        {
            <em>Your shopping cart is empty. Go buy stuff!</em>
        }
        else
        {
            @Html.Partial("CartContents")
        }
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        initRemoveFromCartButton();
    </script>
}
