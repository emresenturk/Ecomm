@model Ecomm.Web.Models.OrderRequest

@{
    ViewBag.Title = "title";
}

<h2>Checkout</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("PlaceOrder", "Checkout", FormMethod.Post))
        {
            Html.EnableClientValidation(true);
            @Html.EditorForModel()
            
            <button type="submit">Place Order</button>
        }
    </div>
    <div class="col-md-6">
        <h3>Summary</h3>
        @Html.Action("CheckoutCartSummary")
    </div>
</div>